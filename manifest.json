{
  "manifest_version": 2,
  "name": "Chrome Chatbot",
  "version": "1.0",
  "description": "Chatbot performs actions in the browser",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Chrome Chatbot"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
